<!DOCTYPE html>
<html lang ="en">
  <head>
    <meta charset="UTF-8">

    <title>SCOOP Dashboard</title>
    <meta name="description" content="The SCOOP Visualization Dashboard.">

    <link rel="stylesheet" href="min.css">

  </head>
  <body>
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-xs-3 col-sm-2 sidebar-offcanvas" id="sidebar" role="navigation">
            {{> sidebar }}
        </div>
        <button id="sidebar-collapse" type="button" class="btn btn-primary" data-toggle="offcanvas">Doop</button>
        <div class="col-xs-12 col-sm-10">
            {{> body }}
        </div>
    </div>

    <!-- Please Minify me! -->
    <!-- Libs -->
    <script src="scripts/lib/jquery-2.1.1.js"></script>
    <script src="scripts/lib/traceur.js"></script>
    <script src="scripts/lib/es6-shim.js"></script>
    <script src="scripts/lib/d3.v3.js"></script>
    <!-- Stuff -->
    <script src="scripts/graphs/config.js"></script>
    <script src="scripts/graphs/graph.js"></script>
    <script src="scripts/graphs/bargraph.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle=offcanvas]').click(function () {
                $('.row-offcanvas').toggleClass('active')
            });
        });
    </script>

  </body>
</html>
